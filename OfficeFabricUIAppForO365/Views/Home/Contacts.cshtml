@model List<OfficeFabricUIAppForO365.Models.Persona>
@{
    ViewBag.Title = "Contacts";
}

<h2>Contacts</h2>
    @if (Model != null)
    {
        foreach (var per in Model)
        {
            <div class="sample-wrapper persona">
                <!-- Copyright (c) Microsoft. All rights reserved. Licensed under the MIT license. See LICENSE in the project root for license information. -->
                <div class="ms-PersonaCard">
                    <div class="ms-PersonaCard-persona">
                        <div class="ms-Persona">
                            <div class="ms-Persona-imageArea">
                                <div class="ms-Persona-imageCircle">
                                    <i class="ms-Persona-placeholder ms-Icon ms-Icon--person"></i>
                                    <img class="ms-Persona-image" src="~/Content/account.png">
                                </div>
                                <div class="ms-Persona-presence"></div>
                            </div>
                            <div class="ms-Persona-details">
                                <!-- Use title attribute to display full text in the event of primaryText truncation -->
                                <div title="Alton Lafferty" class="ms-Persona-primaryText">@per.DisplayName</div>
                                <div class="ms-Persona-secondaryText">@per.JobTitle</div>
                                <div class="ms-Persona-tertiaryText">@per.CompanyName</div>
                                <div class="ms-Persona-optionalText">@per.OfficeLocation</div>
                            </div>
                        </div>
                    </div>
                    <ul class="ms-PersonaCard-actions">
                        <li class="ms-PersonaCard-action" id="chat"><a href="sip:@per.Im" title="@per.Im"><i class="ms-Icon ms-Icon--chat"></i></a></li>
                        <li class="ms-PersonaCard-action" id="phone"><a href="tel:@per.Phone" title="@per.Phone"><i class="ms-Icon ms-Icon--phone"></i></a></li>
                        <li class="ms-PersonaCard-action" id="mail"><a href="mailto:@per.Email" title="@per.Email"><i class="ms-Icon ms-Icon--mail"></i></a></li>
                    </ul>
                </div>
            </div>
        }
    }
